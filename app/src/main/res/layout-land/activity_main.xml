<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/previCal"
            android:textAlignment="textEnd"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:background="#00000000"
            android:maxLines="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/display"
            android:textAlignment="textEnd"
            android:textSize="20dp"
            android:hint="0"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textStyle="bold|normal"
            android:background="#00000000"
            android:maxLines="1"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
    <View
        android:alpha=".5"
        android:layout_marginBottom="-30dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginBottom="-5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:minWidth="0dp"
            app:backgroundTint="@color/blacks"
            app:icon="@drawable/ic_rotation"
            app:iconSize="18dp"
            android:onClick="rotateBtn"
            app:shapeAppearanceOverlay="@style/Button8"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:minWidth="0dp"
            android:onClick="backSpaceBtn"
            app:backgroundTint="@color/blacks"
            app:icon="@android:drawable/ic_input_delete"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:shapeAppearanceOverlay="@style/Button8"
            tools:ignore="SpeakableTextPresentCheck" />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="-25dp"
        android:layout_height="250dp">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            >
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <Button
                    android:text="@string/isPrimeFunctionText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:onClick="primeBtn"
                    android:layout_span="1"
                    android:textAllCaps="false"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn01"
                    android:text="@string/xSquaredText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:onClick="sqrtBtn"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn03"
                    android:text="@string/xPowerYText"
                    android:textSize="19sp"
                    android:paddingTop="8dp"
                    android:onClick="xPowerYBtn"
                    android:paddingBottom="8dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/clear_text"
                    android:text="@string/clearText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:onClick="clearBtn"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="#650C06"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="parOpenBtn"
                    android:text="@string/parenthesesOpenText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

                <Button
android:onClick="parcloseBtn"
                    android:text="@string/parenthesesCloseText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    tools:ignore="DuplicateIds" />

                <Button
android:onClick="divideBtn"
                    android:text="@string/divideText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_margin="3dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
android:onClick="trigSinBtn"
                    android:text="@string/trigSinText"
                    android:textSize="19sp"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
android:onClick="trigCosBtn"
                    android:text="@string/trigCosText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

                <Button
android:onClick="trigtanBtn"
                    android:layout_marginLeft="5dp"
                    android:text="@string/trigTanText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/button7"
                    android:layout_marginLeft="5dp"
                    android:text="@string/sevenText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:onClick="sevenBtn"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="eightBtn"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn001"
                    android:text="@string/eightText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"

                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="nineBtn"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/btn003"
                    android:text="@string/nineText"
                    android:textSize="19sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

                <Button
android:onClick="multiplyBtn"
                    android:text="@string/multiplyText"
                    android:textSize="19sp"
                    android:layout_marginLeft="5dp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />



            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <Button
android:onClick="trigArcSinBtn"
                    android:text="@string/trigArcSinText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

                <Button
                    android:layout_marginLeft="5dp"
                    android:onClick="trigArcCosBtn"
                    android:text="@string/trigArcCosText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
android:onClick="trigArcTanBtn"
                    android:text="@string/trigArcTanText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn012"
                    android:elevation="15dp"
                    android:text="@string/fourText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
android:onClick="foureBtn"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn0011"
                    android:text="@string/fiveText"
                    android:elevation="15dp"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:onClick="fiveBtn"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:layout_marginLeft="5dp"
                    android:id="@+id/button6"
                    android:text="@string/sixText"
                    android:textSize="19sp"
                    android:elevation="15dp"
                    android:onClick="sixBtn"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
android:onClick="subtractBtn"
                    android:text="@string/subtractText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:elevation="15dp"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button

                    android:text="@string/LogText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="logBtn"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
android:onClick="naturalLogBtn"
                    android:text="@string/naturalLogText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />

                <Button
                    android:onClick="xSquaredBtn"
                    android:text="@string/squareRootText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn032"
                    android:text="@string/oneText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="1"
                    android:onClick="oneBtn"
                    android:elevation="15dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="twoBtn"
                    android:id="@+id/btn021"
                    android:text="@string/twoText"
                    android:layout_marginLeft="5dp"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:elevation="15dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="threeBtn"
                    android:id="@+id/btn031"
                    android:layout_marginLeft="5dp"
                    android:text="@string/threeText"
                    android:textSize="19sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:elevation="15dp"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
android:onClick="addBtn"
                    android:text="@string/addText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    tools:ignore="DuplicateIds" />


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >
                <Button
android:onClick="eBtn"
                    android:text="@string/eText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:onClick="piBtn"
                    android:text="@string/piText"
                    android:textSize="19sp"
                    android:padding="2dp"
                    android:layout_span="1"
                    android:textStyle="bold|normal"
                    android:layout_marginLeft="5dp"

                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:padding="2dp"
                    android:text="@string/absoluteValueText"
                    android:textSize="19sp"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:onClick="absBtn"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
                <Button
                    android:id="@+id/btn025"
                    android:text="@string/zeroText"
                    android:textSize="19sp"
                    android:layout_marginLeft="5dp"
                    android:onClick="zeroBtn"
                    android:layout_span="2"
                    android:textStyle="bold|normal"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    android:elevation="15dp"

                    />
                <Button
                    android:text="@string/decimalText"
                    android:textSize="19sp"
                    android:paddingStart="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_span="1"
                    android:onClick="decimalBtn"
                    android:layout_gravity="center"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blacks"
                    android:layout_width="50dp"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/Button8"
                    android:elevation="15dp"
                    />

                <Button
                    android:text="@string/equalsText"
                    android:textSize="19sp"
                    android:onClick="equalsBtn"
                    android:layout_span="1"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold|normal"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:elevation="15dp"
                    app:shapeAppearanceOverlay="@style/Button8"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>